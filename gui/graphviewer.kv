                                             text: '=>'


               RelativeLayout:
                    id: graph_canvas

                    canvas.before:
                         Color:
                              rgba: 0.8, 0.9, 0.9, 1
                         RoundedRectangle:
                              pos: self.parent.pos[0] - 4, self.parent.pos[1] - 28
                              size: self.size[0] - 6, self.size[1] - 4
                              radius: 15, 15, 15, 15

                         Color:
                              rgba: 0, 0, 0, 0.7
                         Line:
                              width: 1
                              rounded_rectangle: self.parent.pos[0] - 4, self.parent.pos[1] - 28, self.width - 6, self.height - 4, 15

          GridLayout:
               size_hint_y: None
               height: 20
               rows: 1
               cols: 1
