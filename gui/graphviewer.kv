<MainViewWidget>:
     canvas.before:
          Color:
               rgba: 1, 1, 1, 1

          Rectangle:
               pos: self.pos[0], self.pos[1]
               size: self.size[0], self.size[1]


     canvas.after:
          Color:
               rgba: 0, 0, 0, 0.9
          Line:
               points: 0, self.size[1], 0, 0, self.size[0], 0, self.size[0], self.size[1]
               width: 1

     GridLayout:
          size: root.width - 20, root.height - 20
          # row_default_height: 50
          # row_force_default: True
          pos: 10, 10
          cols: 1
          rows: 4

          BoxLayout:
               size_hint_y: None
               height: 70

               GridLayout:
                    row_default_height: 40
                    row_force_default: True
                    cols: 2
                    rows: 1

                    BoxLayout:
                         orientation: 'horizontal'
                         id: top_btns
                         spacing: 2
                         Button :
                              id: undirected_btn
                              size: 70, 40
                              pos:10, 10
                              background_normal: ''
                              background_color: 0.8, 0.8, 0.8, 1
                              text: 'Undirected'
                         Button :
                              id: directed_btn
                              size: 70, 40
                              pos:10, 10
                              background_normal: ''
                              background_color: 0.34, 0.34, 0.34, 1
                              text: 'Directed'

                         Button :
                              id: algorithm_btn
                              size: 70, 40
                              pos:10, 10
                              #background_normal: ''
                              #background_color: 0.34, 0.34, 0.34, 1
                              text: 'Algorithms'
                    BoxLayout:
                         orientation: 'horizontal'

                         AnchorLayout:
                              anchor_x: 'right'

                              GridLayout:
                                   rows: 1
                                   cols: 2
                                   width: 200
                                   size_hint_x: None
                                   Button:
                                        id: settings_btn
                                        size: 100, 50
                                        pos: self.pos
                                        background_color: 1, 1, 1, 1
                                        text: 'Settings'
                                        size_hint_x: None

                                   Button:
                                        size: 100, 50
                                        pos: self.pos
                                        background_color: 1, 1, 1, 1
                                        text: 'Save'
                                        size_hint_x: None
                                        #width: 100

          BoxLayout:
               #height: 1000
               orientation: 'horizontal'

               BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: None
                    width: 350

                    BoxLayout: # the input type dropdown

                         orientation: 'horizontal'
                         size_hint: None, None
                         width: 300
                         height: 40
                         padding:[10, 0, 10, 0]
                         spacing: 20

                         Label:
                              size_hint_x: None
                              size: 120, 40
                              text: 'Graph data'
                              color: 0, 0, 0, 1

                         Button:
                              id: input_btn
                              size_hint_x: None
                              size: 190, 40
                              background_color: 1, 1, 1, 1
                              text: 'Input'

                    BoxLayout:
                         orientation: 'horizontal'
                          #size_hint_y: None
                         #height: 40
                         size_hint_x: None
                         width: 300

                         ScrollView:    # Input text for nodes
                              id:scroller
                              do_scroll_x: True
                              do_scroll_y: True
                              scroll_type: ['bars']
                              bar_width: 15
                              size_hint_x: None
                              size: 150, 800

                              TextInput:
                                   id: input_text
                                   width: scroller.width
                                   size_hint: None, None
                                   height: max(self.minimum_height, scroller.height)
                                   hint_text:'Enter text'
                                    #font_size: 30


                         BoxLayout:     # Forces, instructions and algorithm controls
                              orientation: 'vertical'
                              #spacing: 50
                              padding: [10, 0, 10, 20]
                              size_hint_x: None
                              width: 200

#                              canvas.before:
#                                  Color:
#                                        rgba: 1, 0, 0, 1
#                                  Line:
#                                       points: [*self.pos, self.pos[0] + self.size[0], self.pos[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1], self.pos[0], self.pos[1] + self.size[1], *self.pos]
#                                      width: 2

                              BoxLayout:
                                   orientation: 'horizontal'
                                   size_hint_x: None
                                   spacing: 30
                                   Label:
                                          #padding: [20, 20]
                                        size_hint_x: None
                                        size: 80, 10
                                        color: 0, 0, 0, 1
                                        text: 'Forces:'

                                   Switch:
                                        id: switch
                                        active: True
                                        #size_hint: None, None
                                        size: 60, 10

                              LabelB:
                                   id: draw_lbl
                                   padding: [20, 20]
                                   text:'Tap to add nodes, \nDouble tap to remove nodes\nTap on two different nodes\nto create an edge between them'
                                   text_size: self.size
                                   size_hint_y: None
                                   height: 150
                                   background_color: 0.2, 0.7, 0.9, 0.75
                                   color: 1, 1, 1, 1

                              BoxLayout:
                                   orientation: 'horizontal'
                                   spacing: 30

                                   Label:
                                        id: bfs_txt_lbl
                                        size_hint: None, None
                                        visible: False
                                        opacity: 1 if self.visible else 0
                                        size: 150, 30
                                        text: 'Enter the starting node:'
                                        color: 0, 0, 0, 1
                                   TextInput:
                                        id: bfs_txt_input
                                        visible: False
                                         #hint_text: 'Enter the starting node'
                                        opacity: 1 if self.visible else 0
                                        size_hint: None, None
                                        size: 40, 30
