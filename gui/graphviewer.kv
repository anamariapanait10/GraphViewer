                                   BoxLayout:
                                        orientation: 'horizontal'
                                        height: 30
                                        spacing: 20
                                        size_hint_x: None
                                        width:50

                                        Button :
                                             size: 50, 30
                                             size_hint_x: None
                                             pos:10, 0
                                             background_color: 1, 1, 1, 1
                                             text: '<='

                                   BoxLayout:
                                        orientation: 'horizontal'
                                        height: 30
                                        spacing: 30
                                        size_hint_x: None
                                        width: 120
                                        Button :
                                             size: 50, 30
                                             pos:10, 0
                                             background_color: 1, 1, 1, 1
                                             text: '<-'

                                        Button :
                                             size: 50, 30
                                             pos:10, 0
                                             background_color: 1, 1, 1, 1
                                             text: '->'
                                   BoxLayout:
                                        orientation: 'horizontal'
                                        height: 30
                                        spacing: 20
                                        Button :
                                             size_hint_x: None
